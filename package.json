{
  "name": "angular-coding-guide",
  "version": "0.0.0",
  "engines": {
    "node": "^22.0.0"
  },
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:task-management-app": "ng serve task-management-app -c development",
    "build:task-management-app:dev": "ng build task-management-app -c development",
    "build:task-management-api:dev": "ng build task-management-api -c development",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint --cache",
    "lint:fix": "ng lint --fix --cache",
    "prepare": "husky",
    "prettier:write": "prettier . --write --ignore-unknown --cache",
    "prettier:check": "prettier . --check --ignore-unknown --cache",
    "eslint:task-management-app:fix": "eslint projects/task-management-app -c projects/task-management-app/eslint.config.js --fix",
    "eslint:task-management-api:fix": "eslint projects/task-management-api -c projects/task-management-api/eslint.config.js --fix",
    "task-management-api:server": "json-server projects/task-management-api/db.json --routes projects/task-management-api/routes.json --watch --port 3000"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.5",
    "@angular/cli": "^19.2.5",
    "@angular/compiler-cli": "^19.2.0",
    "@eslint/config-inspector": "^1.0.2",
    "@playwright/test": "^1.51.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^22.14.0",
    "angular-eslint": "19.3.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jasmine-core": "~5.6.0",
    "json-server": "^0.17.4",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.5.0",
    "ng-packagr": "^19.2.0",
    "prettier": "3.5.3",
    "typescript": "~5.7.2",
    "typescript-eslint": "8.27.0"
  }
}
